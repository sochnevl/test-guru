<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="user-actions">
      <p><%= link_to 'TestGuru', root_path %></p>
      <% if user_signed_in? %>
        <p class="nav user">
          <%= t('.welcome')%>, <b><%= current_user.email %></b> Guru
          <%= button_to t('.logout'), destroy_user_session_path, method: :delete %>
        </p>
      <% else %>
        <p><%= link_to t('.registration'), new_user_registration_path %> | <%= link_to t('.login'), new_user_session_path %></p>
      <% end %>
    </div>

    <%= render 'shared/flash' %>

    <%= yield %>
  </body>

  <footer>
    <%= render 'shared/footer' %>
  </footer>
</html>
