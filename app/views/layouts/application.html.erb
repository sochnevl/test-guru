<!DOCTYPE html>
<html>
  <head>
    <title>TestGuru</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="user-actions">
      <p><%= link_to 'TestGuru', root_path %></p>
      <% if logged_in? %>
        <p class="nav user">Добро пожаловать, <b><%= current_user.email %></b> Guru</p>
        <p><%= button_to 'Выход', logout_path, method: :delete %></p>
      <% else %>
        <p><%= link_to 'Регистрация', signup_path %> | <%= link_to 'Вход', login_path %></p>
      <% end %>
    </div>

    <%= yield %>
  </body>


  <footer>
    <%= render 'shared/footer' %>
  </footer>
</html>
