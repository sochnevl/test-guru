<h1> Создать новый вопрос </h1>

<form accept-charset="UTF-8" action="/tests/<%=params[:test_id]%>/questions" method="post">
  <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
  <p>
    <label for="question-body">Введите вопрос:</label>
    <input type="text" name="question[body]" id="question-body">
  </p><br>
  <p>
  <input type="submit" value="Create">
  </p>  
</form>