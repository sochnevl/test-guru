<% flash.each do |key, message| %>
  <% type = case key
             when "notice" then "success"
             when "alert" then "warning"
             when "plain" then "info"
             else "info" # Значение по умолчанию
           end %>
  <%= content_tag :p, sanitize(message), class: "alert alert-#{type}", role: "alert" %>
<% end %>
