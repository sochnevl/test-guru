<div class="row">
  <h1> <%= t('.header') %> </h1>

  <p> <%= link_to t('.create_new_test'), new_admin_test_path %> </p>

  <%= render 'shared/errors', resource: @test %>

  <table class="table table-hover">
    <tr>
      <th class="sort-by-title pointer">
        <%= t('.title') %>
        <%= octicon 'arrow-up', class: 'text-success hide' %>
        <%= octicon 'arrow-down', class: 'text-success hide' %>
      </th>
      <th><%= t('.level') %></th>
      <th><%= t('.category') %></th>
      <th><%= t('.questions_count') %></th>
      <th colspan="4"><%= t('.actions') %></th>
    </tr>

    <%= render @tests %>
  </table>
</div>
